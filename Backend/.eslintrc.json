{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-var": "warn",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "always"],
    "curly": ["warn", "all"],
    "no-throw-literal": "error",
    "no-duplicate-imports": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js"
  ]
}
